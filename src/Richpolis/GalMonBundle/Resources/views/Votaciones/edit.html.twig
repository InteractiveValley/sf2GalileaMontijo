{% extends "RichpolisBackendBundle::backend.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/uploadify/uploadify.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/Jcrop/jquery.Jcrop.css') }}" rel="stylesheet" />

    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/tiny_mce/tiny_mce.js') }}"></script>
    <script src="{{ asset('js/uploadify/jquery.uploadify.min.js') }}"></script>
    <script src="{{ asset('js/Jcrop/jquery.Jcrop.min.js') }}"></script>

    {{ form_javascript(edit_form) }}
{% endblock %}

{% block menu_horizontal %}
    {% include 'RichpolisBackendBundle:Default:menu_horizontal.html.twig' with {'pagina': 'votaciones'} %}
{% endblock %}

{% block body %}
<h1>Editar registro de galerias de votaciones "{{entity.titulo}}"</h1>

<form id="formPrincipal" action="{{ path('votaciones_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
</form>


    <p style="margin-top: 10px;">
    <ul class="record_actions nav nav-pills">
        <li>
            <button class="btn btn-primary" onclick="$('#formPrincipal').submit();">Actualizar</button>
        </li>
        <li>&nbsp;</li>
        <li>
            <button class="btn" onclick="location.href = '{{ path('semana_votaciones_show',{'id': semana.id }) }}'">
                Regresar
            </button>
        </li>
        <li>&nbsp;</li>
        <li>
            <form action="{{ path('votaciones_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit">Eliminar</button>
                </form>
            </li>
        </ul>

    </p>
{% endblock %}