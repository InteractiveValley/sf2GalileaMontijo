{% extends "RichpolisBackendBundle::backend.html.twig" %}

{% block menu_horizontal %}
    {% include 'RichpolisBackendBundle:Default:menu_horizontal.html.twig' with {'pagina': 'votaciones'} %}
{% endblock %}

{% block body %}
<h1>Registro de galeria Votaciones "{{entity.titulo}}"</h1>

<table class="record_properties table table-bordered">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Imagen</th>
            <td>{{ entity.imagen }}</td>
        </tr>
        <tr>
            <th>Thumbnail</th>
            <td>{{ entity.thumbnail }}</td>
        </tr>
        <tr>
            <th>Posicion</th>
            <td>{{ entity.posicion }}</td>
        </tr>
        <tr>
            <th>Votacion</th>
            <td>{{ entity.votacion }}</td>
        </tr>
        <tr>
            <th>Semana_id</th>
            <td>{{ entity.semanaid }}</td>
        </tr>
        <tr>
            <th>Activo</th>
            <td>{{ entity.isactive }}</td>
        </tr>
        <tr>
            <th>Creado</th>
            <td>{{ entity.createdat|date('d/m/Y H:i') }}</td>
        </tr>
        <tr>
            <th>Actualizado</th>
            <td>{{ entity.updatedat|date('d/m/Y H:i') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions nav nav-pills">
        <li>
            <button class="btn" onclick="location.href='{{ path('votaciones') }}'">
                Regresar
            </button>
        </li>
        <li>&nbsp;</li>
        <li>
            <button class="btn btn-success" onclick="location.href='{{ path('votaciones_edit', { 'id': entity.id }) }}'">
                Editar
            </button>
        </li>
        <li>&nbsp;</li>
        <li>
            <form action="{{ path('votaciones_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit">Eliminar</button>
            </form>
        </li>
</ul>
{% endblock %}