{% extends "RichpolisBackendBundle::backend.html.twig" %}

{% block menu_horizontal %}
    {% include 'RichpolisBackendBundle:Default:menu_horizontal.html.twig' with {'pagina': 'publicaciones'} %}
{% endblock %}

{% block body %}
<h1>Publicacion "{{entity.titulo}}"</h1>

<table class="record_properties table table-bordered">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Titulo</th>
            <td>{{ entity.titulo }}</td>
        </tr>
        <tr>
            <th>Publicacion</th>
            <td>{{ entity.publicacion | raw }}</td>
        </tr>
        <tr>
            <th>Imagen</th>
            <td><img src="{{ entity.webPath }}"/></td>
        </tr>
        <tr>
            <th>Link video</th>
            <td>{{ entity.linkvideo }}</td>
        </tr>
        <tr>
            <th>Posicion</th>
            <td>{{ entity.posicion }}</td>
        </tr>
        <tr>
            <th>Tipo</th>
            <td>{{ entity.stringtipopublicacion }}</td>
        </tr>
        <tr>
            <th>Activo</th>
            <td>{{ entity.isactive | isActive | raw }}</td>
        </tr>
        <tr>
            <th>Creado</th>
            <td>{{ entity.createdat|date('d/m/Y H:i') }}</td>
        </tr>
        <tr>
            <th>Actualizado</th>
            <td>{{ entity.updatedat|date('d/m/Y H:i') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions nav nav-pills">
        <li>
            <button class="btn" onclick="location.href='{{ path('publicaciones') }}'">
                Regresar
            </button>
        </li>
        <li>&nbsp;</li>
        <li>
            <button class="btn btn-success" onclick="location.href='{{ path('publicaciones_edit', { 'id': entity.id }) }}'">
                Editar
            </button>
        </li>
        <li>&nbsp;</li>
        <li>
            <form action="{{ path('publicaciones_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit">Eliminar</button>
            </form>
        </li>
</ul>
{% endblock %}