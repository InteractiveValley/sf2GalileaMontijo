{% extends "RichpolisBackendBundle::backend.html.twig" %}

{% block menu_horizontal %}
    {% include 'RichpolisBackendBundle:Default:menu_horizontal.html.twig' with {'pagina': 'usuarios'} %}
{% endblock %}


{% block body %}
<h1>Nuevo usuario</h1>

<form action="{{ path('usuarios_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p style="margin-top: 10px;">
        <ul class="record_actions">
            <li style=" list-style: none; display: inline;">
                <button class="btn btn-primary" type="submit">Guardar</button>
            </li>
            <li style=" list-style: none;  display: inline;">
                <a class="btn" href="{{ path('usuarios') }}">
                    Regresar
                </a>
            </li>
        </ul>
    </p>
</form>

{% endblock %}