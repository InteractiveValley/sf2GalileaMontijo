{% extends "RichpolisBackendBundle::backend.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/uploadify/uploadify.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/Jcrop/jquery.Jcrop.css') }}" rel="stylesheet" />

    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/tiny_mce/tiny_mce.js') }}"></script>
    <script src="{{ asset('js/uploadify/jquery.uploadify.min.js') }}"></script>
    <script src="{{ asset('js/Jcrop/jquery.Jcrop.min.js') }}"></script>

    {{ form_javascript(form) }}
{% endblock %}

{% block menu_horizontal %}
    {% include 'RichpolisBackendBundle:Default:menu_horizontal.html.twig' with {'pagina': 'votaciones'} %}
{% endblock %}

{% block body %}
<h1>Nuevo registro de semana</h1>

<form action="{{ path('semana_votaciones_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p style="margin-top: 10px;">
        <ul class="record_actions">
            <li style=" list-style: none; display: inline;">
                <button class="btn btn-primary" type="submit">Guardar</button>
            </li>
            <li style=" list-style: none;  display: inline;">
                <a class="btn" href="{{ path('semana_votaciones') }}">
                    Regresar
                </a>
            </li>
        </ul>
    </p>
</form>
<script>
$(document).ready(function(){
   $('.datepicker').datepicker({ dateFormat: "dd-mm-yy" }); 
});    
</script>
{% endblock %}