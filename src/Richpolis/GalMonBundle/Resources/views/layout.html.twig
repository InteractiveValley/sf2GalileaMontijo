<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title>{% block title %} Home {% endblock %} - Galileo Montijo </title>
        {% block stylesheets %}
            {# stylesheets 'css/*' #}
            {#link href="{{ asset_url }}" rel="stylesheet" media="screen" #}
            {# endstylesheets #}
            <link rel="stylesheet" href="{{ asset('bundles/richpolisgalmon/css/main.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('css/jquery-ui-1.9.2.custom.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('bundles/richpolisgalmon/css/fuente_titulos.css') }}" type="text/css" media="all" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <!--[if lt IE 9]>
            <script src="{{ asset('js/html5shiv.js') }}"></script>
        <![endif]-->   
    </head>
    <body>
        <div id="container">
            <header id="header">
                <div class="encabezado_logo">
                    <img src="{{ asset('images/pagina/encabezado.jpg') }}" class="encabezado-logo" />
                </div>
            </header>
            {% block navigation %}
             <nav>
                 <ul class="navigation nav nav-pills">
                   <li class="active"><a href="{{path('RichpolisGalMonBundle_homepage')}}"><i class="icon-home"></i>Home</a></li>
                   <li><a href="{{path('RichpolisGalMonBundle_noticias')}}">Noticias</a></li>
                   <li><a href="{{path('RichpolisGalMonBundle_trayectoria')}}">Trayectoria</a></li>
                   <li><a href="{{path('RichpolisGalMonBundle_amigos')}}">Amigos</a></li>
                   <li><a href="{{path('RichpolisGalMonBundle_contacto')}}">Contacto</a></li>
                  </ul>
              </nav>
            {% endblock %}
            {% block body %}{% endblock %}
            <footer id="footer">
                {% block footer %}
                    Footer de pagina
                {% endblock %}
            </footer>
        </div>
       {% block javascripts %}
        <script src="{{ asset('js/jquery-1.8.3.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery-ui-1.9.2.custom.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery.easing.1.3.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
        
       {% endblock %}
       {% block javascript_adicional %} 
        
       {% endblock %}
    </body>
</html>