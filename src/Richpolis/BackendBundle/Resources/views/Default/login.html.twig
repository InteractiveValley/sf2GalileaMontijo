{% extends "RichpolisBackendBundle::backend.html.twig" %}

{% block siderbar ""%} 

{% block menu_horizontal ""%}

{% block body %} 
<div class="hero-unit span5 offset1" >

{% if error %}
    <div>{{ error.message }}</div>
{% else %}
    <h6>Acceso a la pagina</h6>
{% endif %}
    
<form action="{{ path('login_check') }}" method="post">
    <div class="controsls">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />
    </div>
    <div class="controls">    
    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" />
    </div>
    {#
        Si deseas controlar la URL a la que rediriges al
        usuario en caso de éxito (más detalles abajo)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <div class="controls">    
    <button type="submit">login</button>
    </div>
</form>
</div>        
<script>
$(document).ready(function(){
   $("div.well").hide(); 
});    
</script>
{% endblock %}